@model MusicStore.ViewModels.ListAlbumsByGenreViewModel

@{
    Layout = "_Layout";

    ViewData["Title"] = "Albums";
}

<h2>Albums</h2>

<h4>@Html.DisplayFor(model => model.Genres[0].Name) Albums</h4>
<ul class="row list-unstyled">
    @foreach (var item in Model.Albums)
    {
        <li class="col-lg-2 col-md-2 col-sm-2 col-xs-4 container">
            <a asp-controller="Store" asp-action="Details" asp-route-id="@item.AlbumID">
                <img alt="@item.Title" src="@Url.Content("~/content/" + item.AlbumArtUrl)" height="125" width="125" />
                <h5>@item.Title</h5>
            </a>
        </li>
    }
</ul>

